<div class="navbar bg-dark d-flex justify-content-between align-items-center p-3 mb-3">
  <%= link_to "Simple Airbnb", flats_path%>
  <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary"%>
</div>
<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>All our Flats (<%= @flats.length %>)</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
          <article class="card mb-3">
            <div class="card-body bg-light">
              <div class="bg-light">
                <h2 class="card-title"><%= flat.name %></h2>
                <p class="card-text"><%= flat.address %></p>
                <p>
                  <i class="fa-solid fa-people-group"></i>
                  <%= flat.number_of_guests %>
                  <i class="fa-solid fa-euro-sign"></i>
                  <%= flat.price_per_night %>
                </p>
              </div>
              <div class="bg-white">
                <%= link_to "More info", flat_path(flat), class: "text-primary"  %>
                <%= link_to "Edit", edit_flat_path(flat), class: "text-warning"  %>
                <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %>
              </div>

          </div>
        </article>
      </div>
    <% end %>
  </div>

</div>
