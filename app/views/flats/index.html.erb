<div class="header d-flex justify-content-between align-items-center p-3 mb-3">
  <%= link_to "Simple Airbnb", flats_path%>
  <%= link_to "Add flat", new_flat_path%>
</div>
<div class="container">
  <p>All our flats (<%= @flats.length %>)</p>
  <% @flats.each do |flat| %>
  <div class="cards">
      <article class="card mb-3">
      <div class="card-body">
        <h2 class="card-title"><%= flat.name %></h2>
        <p class="card-text"><%= flat.address %></p>
        <p>
          <i class="fa-solid fa-people-group"></i>
          <%= flat.number_of_guests %>
          <i class="fa-solid fa-euro-sign"></i>
          <%= flat.price_per_night %>
        </p>
        <%= link_to "More info", flat_path(flat)  %>
        <%= link_to "Edit", edit_flat_path(flat)  %>
        <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>

    </article>
  </div>

  <% end %>

</div>
